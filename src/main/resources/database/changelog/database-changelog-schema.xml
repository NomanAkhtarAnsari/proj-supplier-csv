<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="akhtar">
        <createTable tableName="supplier">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_supplier_id"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <sql>
            CREATE INDEX idx_supplier_name ON supplier(name);
        </sql>
    </changeSet>
    <changeSet id="2" author="akhtar">
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_product_id"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="mrp" type="numeric(35,5)"/>
            <column name="rate" type="numeric(35,5)"/>
            <column name="expire" type="TIMESTAMP"/>
            <column name="company" type="VARCHAR"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <sql>
            CREATE INDEX idx_product_name ON product(name);
            CREATE INDEX idx_product_code ON product(code);
        </sql>
    </changeSet>
    <changeSet id="3" author="akhtar">
        <createTable tableName="inventory">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_inventory_id"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints foreignKeyName="inventory_supplier_id_fk"
                             referencedTableName="supplier"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="inventory_product_id_fk"
                             referencedTableName="product"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="batch" type="VARCHAR"/>
            <column name="stock" type="BIGINT"/>
            <column name="deal" type="BIGINT"/>
            <column name="free" type="BIGINT"/>
        </createTable>
        <sql>
            CREATE INDEX idx_inventory_batch ON inventory(batch);
        </sql>
    </changeSet>
</databaseChangeLog>